<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.mascotahelp.PanelControl">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton android:id="@+id/imageButton"
                android:layout_column="0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/comida"
                android:background="@drawable/dogEat" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton4"
                android:layout_column="1"
                android:src="@drawable/limpiezaDog" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton5"
                android:layout_column="2"
                android:src="@drawable/salud"
                android:longClickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton android:id="@+id/imageButton2"
                android:layout_column="0"
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:src="@drawable/entretenimiento" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton6"
                android:layout_column="1"
                android:background="@drawable/eat" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton7"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageButton android:id="@+id/imageButton3"
                android:layout_column="0"
                android:layout_height="120dp"
                android:layout_width="120dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:id="@+id/imageButton8"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:id="@+id/imageButton9"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton android:id="@+id/imageButton10"
                android:layout_column="1"
                android:layout_height="120dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
